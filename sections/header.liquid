{{ 's-header.css' | asset_url | stylesheet_tag }}
<script src="{{ 's-header.js' | asset_url }}" defer></script>

<s-header class="s-header">
  <header>
    <div class="menu-ribbon"></div>

    <div class="main-block">
      <div class="main-block__search">
        <button class="custom-hover">
          <span>{% render 'icon-custom-search' %}</span>
          <span>Search</span>
        </button>
      </div>
      <div class="main-block__menu">
        <div class="main-block__menu_logo">
          <a href="/" class="custom-hover">{% render 'logo-loro-piana' %}</a>
        </div>
        <nav class="main-block__menu_links">
          <ul>
            {% for link in linklists.loro-menu.links -%}
              <li>{{ link.title | link_to: link.url }}</li>
            {%- endfor %}
          </ul>
        </nav>
      </div>
      <div class="main-block__cart">
        <a href="#" class="custom-hover">{% render 'icon-user' %}</a>
        <a href="#" class="custom-hover">{% render 'icon-bookmark' %}</a>
        <a href="#" class="custom-hover">{% render 'icon-handbag' %}</a>
      </div>
    </div>

    {% comment %} Mobile menu {% endcomment %}

    <div class="mobile-menu">
      <div>
        <span class="mobile-menu__btn">
          {% render 'icon-hamburger' %}
          {% render 'icon-close' %}
        </span>
      </div>
      <div class="mobile-menu__logo">
        <a href="/" class="custom-hover">{% render 'logo-loro-piana' %}</a>
      </div>
      <div class="mobile-menu__right">
        {% render 'icon-custom-search' %}
        {% render 'icon-handbag' %}
      </div>
    </div>
  </header>
</s-header>
{% schema %}
  {
    "name": "Header",
    "settings": []

  }
{% endschema %}